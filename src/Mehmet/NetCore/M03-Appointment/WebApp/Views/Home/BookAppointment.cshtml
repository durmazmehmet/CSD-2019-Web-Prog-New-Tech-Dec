@model ClientViewModel

@{
    ViewData["Title"] = "BookAppointment";
}

<h1>BookAppointment</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookAppointment">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Client.Id" class="form-control" placeholder="Citizen ID" />
                <span asp-validation-for="Client.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Client.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Client.Phone" class="form-control" placeholder="Phone" />
                <span asp-validation-for="Client.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ClientAgreement" form-control" placeholder="I agree to the with terms and conditions" />
                <span asp-validation-for="ClientAgreement" class="text-danger"></span>
                <a href="http://terms">Terms and Conditions</a>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
